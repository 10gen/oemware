    <!-- ******************************************************************* -->
    <!-- Compile the specfic java classes.                                   -->
    <!-- ******************************************************************* -->

    <target name="compile.java"> 

        <antcall target="compile.java.classes">
            <param name="dir.compile.java.src.1" value="${dir.src.java}"/>
            <param name="dir.compile.java.src.2" value="${dir.src.java.unit}"/>
            <param name="dir.compile.java.src.3" value="${dir.src.java.generate}"/>
        </antcall>
    </target>

    <!-- ******************************************************************* -->
    <!-- Compile the java classes.                                           -->
    <!-- ******************************************************************* -->

    <target name="compile.java.classes">
        <mkdir dir="${dir.java.build}"/>
        <mkdir dir="${dir.build}/modules/lib/java"/>
        <javac destdir="${dir.java.build}" target="${javac.source}" debug="true" encoding="UTF-8" classpathref="classpath.cp" source="${javac.source}" debuglevel="lines,vars,source">
            <src path="${dir.compile.java.src.1}"/>
            <src path="${dir.compile.java.src.2}"/>
            <src path="${dir.compile.java.src.3}"/>
            <compilerarg value="-Xlint:all,-fallthrough"/>
            <classpath refid="classpath.all"/> 
        </javac>
    </target>

    <!-- ******************************************************************* -->
