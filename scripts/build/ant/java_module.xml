    <!-- ******************************************************************* -->
    <!-- The clean module targets.                                           --> 
    <!-- ******************************************************************* -->

    <target name="clean.module"> 
        <delete dir="${dir.build}/modules/devmodule"/>
    </target>

    <!-- ******************************************************************* -->
    <!-- The dev module app targets.                                         -->
    <!-- ******************************************************************* -->

    <target name="package.devmodule" depends="compile.java">
        <property name="package.app.name" value="devmodule"/>
        <property name="package.web.context" value="devmodule"/>
        <property name="package.web.name" value="web"/>
        <property name="package.app.path" value="${package.app.name}"/>
        <property name="package.dir.conf" value="conf/modules/${package.app.path}"/>
        <antcall target="package.java.app">
            <param name="package.app.name" value="${package.app.name}"/>
            <param name="package.dir.conf" value="${package.dir.conf}"/>
            <param name="package.service.script" value="scripts/service/module/${package.app.path}"/>
        </antcall>
        <antcall target="package.web">
            <param name="package.app.name" value="${package.app.name}"/>
            <param name="package.web.dir" value="${package.web.name}"/>
            <param name="package.web.context" value="${package.web.context}"/>
            <param name="package.dir.conf" value="${package.dir.conf}"/>
        </antcall>

    </target>

    <target name="build.devmodule" depends="package.devmodule">
        <property name="build.app.name" value="devmodule"/>
        <antcall target="build.java.app">
            <param name="build.app.name" value="${build.app.name}"/>
        </antcall>
    </target>

    <!-- ******************************************************************* -->

