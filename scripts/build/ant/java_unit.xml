    <!-- Run the stand alone junit tests.                                    -->
    <!-- ******************************************************************* -->

    <target name="unit" depends="compile.java">
        <junit fork="yes" haltonfailure="true">
            <jvmarg value="-Duser.timezone=GMT"/>
            <classpath refid="classpath.all"/>
            <classpath>
                <pathelement location="${dir.java.build}"/>
                <pathelement location="./"/>
            </classpath>
            <formatter type="brief" usefile="false"/>
            <test name="oemware.unit.StandAloneUnitTests"/>
        </junit>
    </target>

