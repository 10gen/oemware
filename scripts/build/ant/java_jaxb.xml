    <!-- ******************************************************************* -->
    <!-- Generate the jaxb files.                                            -->
    <!-- ******************************************************************* -->

    <target name="generate.jaxb">
        <mkdir dir="${dir.src.java.generate}/${jaxb.package.path}"/>
        <exec executable="xjc">
            <arg value="conf/xsd/${jaxb.xsd.file}"/>
            <arg value="-readOnly"/>
            <arg value="-p"/>
            <arg value="${jaxb.package.name}"/>
            <arg value="-d"/>
            <arg value="${dir.src.java.generate}"/>
        </exec>
    </target>

    <!-- ******************************************************************* -->
    <!-- Generate the junit jaxb files.                                      -->
    <!-- ******************************************************************* -->

    <target name="generate.jaxb.unit">
        <mkdir dir="${dir.src.java.generate}/${jaxb.package.path}"/>
        <exec executable="xjc">
            <arg value="conf/xsd/${jaxb.xsd.file}"/>
            <arg value="-readOnly"/>
            <arg value="-p"/>
            <arg value="${jaxb.package.name}"/>
            <arg value="-d"/>
            <arg value="${dir.src.java.generate}"/>
        </exec>
    </target>

    <!-- ******************************************************************* -->
    <!-- Generate the specific jaxb files.                                   -->
    <!-- ******************************************************************* -->

    <!-- Please make sure you Keep this list up to date or things will break. -->
    <target name="generate.jaxb.all">
        <antcall target="generate.jaxb.apictrl-config"/>
    </target>

    <target name="generate.jaxb.apictrl-config">
        <antcall target="generate.jaxb">
        <param name="jaxb.xsd.file" value="apictrl-config.xsd"/>
        <param name="jaxb.package.name" value="oemware.core.apictrl.config"/>
        <param name="jaxb.package.path" value="oemware/core/apictrl/config"/>
        </antcall>
    </target>


