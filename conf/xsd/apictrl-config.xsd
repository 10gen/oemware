<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" jaxb:version="2.0"> 

    <xsd:annotation><xsd:appinfo><jaxb:property generateIsSetMethod="true"/></xsd:appinfo></xsd:annotation>
    
    <xsd:element name="controllers" type="controllersDef"/>
    
    <xsd:complexType name="controllersDef">
        
        <xsd:sequence><xsd:element ref="controller" minOccurs="0" maxOccurs="unbounded"/></xsd:sequence>

    </xsd:complexType>

    <xsd:element name="controller" type="controllerDef"/>

    <xsd:complexType name="controllerDef">

        <xsd:sequence>
            <xsd:element ref="constructor-arg" minOccurs="0" maxOccurs="unbounded"/>
            <xsd:element ref="action" minOccurs="1" maxOccurs="unbounded"/>
        </xsd:sequence>
 
        <xsd:attribute name="path" type="xsd:string" use="required"/>
        <xsd:attribute name="class" type="xsd:string" use="required"/>
    </xsd:complexType>

    <xsd:element name="constructor-arg" type="constructorArgDef"/>
    <xsd:element name="action" type="actionDef"/>
    
    <xsd:complexType name="constructorArgDef">
        <xsd:attribute name="componentId" type="xsd:string" use="required"/>
    </xsd:complexType>

    <xsd:complexType name="actionDef">
        <xsd:attribute name="name" type="xsd:string" use="required"/> 
    </xsd:complexType>

</xsd:schema> 

